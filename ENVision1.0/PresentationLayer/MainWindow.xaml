                    <Label x:Name="lblUsername" Content="Username:" Foreground="DarkGreen" FontSize="20" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Left" Margin="148,149,0,0" Grid.Row="2" VerticalAlignment="Top" Height="48"/>
