                    <Button x:Name="btn_VolOpp_Delete" Visibility="Hidden" Content="Delete" Grid.Column="1" HorizontalAlignment="Left" Margin="579,472,0,0" Grid.Row="2" VerticalAlignment="Top" Width="86" Height="33"/>
